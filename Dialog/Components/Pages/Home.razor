@page "/"
@using Syncfusion.Blazor.Popups
@rendermode InteractiveServer


<PageTitle>Home</PageTitle>

<style>

    .parent {
        display: flex;
        width: 100%;
        height: 100vh;
        position: fixed;
        top:0;
        left: 0;
    }

    .left {
        width: 50%;
        background: yellow;
        height: 100%;
        position: relative;
    }

    .right {
        width: 50%;
        background: green;
        height: 100%;
        position: relative;
    }
</style>
<div class="parent">
    <button class="e-btn" @onclick="@OnBtnClick">Open</button>
    <div class="left"></div>
    <div class="right"></div>
</div>



<SfDialog Target=".right"
          Width="300px"
          ShowCloseIcon="true"
          @bind-Visible="Visibility"
          AllowPrerender="true" IsModal="true">
    <DialogTemplates>
        <Header> Dialog </Header>
        <Content> This is a dialog with header </Content>
    </DialogTemplates>

    <DialogAnimationSettings Effect="@DialogEffect.SlideBottom"
                                 Duration="1000" />
</SfDialog>
@code {
    private bool Visibility { get; set; } = true;
    private void OnBtnClick()
    {
        this.Visibility = true;
    }
}
